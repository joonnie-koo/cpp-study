{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug (WSL Native)",
            "type": "cppdbg",
            "request": "launch",
            // 빌드된 실행 파일 경로
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // tasks.json의 label과 일치해야 합니다.
            "preLaunchTask": "WSL: g++ build debug",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "C++ Release (WSL Native)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "WSL: g++ build release",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}